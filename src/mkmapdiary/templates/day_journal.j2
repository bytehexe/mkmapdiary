{% if assets %}
## {{ strings.journal_title }}

{% for asset in assets %}
<div class="journal-entry" id="asset-{{ asset.id }}" markdown>
{% if asset.type == "markdown" %}
--8<-- "docs/assets/{{ asset.path }}:1:1"
{% elif asset.type == "audio" %}
--8<-- "docs/assets/{{ asset.path }}.md:1:1"
{% endif %}
<div class="metadata">
<i class="iconoir iconoir-clock"></i> {{ asset.time }}
{% if asset.timezone %}· <i class="iconoir iconoir-time-zone"></i> {{ asset.timezone }}{% endif %}
{% if asset.location %}· <i class="iconoir iconoir-map-pin"></i> <a href="#" class="location-link" data-lat="{{ asset.latitude }}" data-lng="{{ asset.longitude }}">{{ asset.location }}</a>{% endif %}
{% if asset.location_admin %}· <i class="iconoir iconoir-map"></i> {{ asset.location_admin }}{% endif %}
</div>
{% if asset.type == "markdown" %}
--8<-- "docs/assets/{{ asset.path }}:2"
{% elif asset.type == "audio" %}
<div class="audio-section">
<audio controls>
  <source src="assets/{{ asset.path }}" type="audio/mpeg">
  Your browser does not support the audio element.
</audio>
--8<-- "docs/assets/{{ asset.path }}.md:2"
</div>
{% endif %}
</div>
{% endfor %}
{% endif %}